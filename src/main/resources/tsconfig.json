  "include": [
    "**/*.ts"
  ],

  "exclude": [
    "**/*.d.ts",
  ],

  "compilerOptions": {
    "strict": true,
    "paths": {
      "/lib/xp/*": ["../../../node_modules/@enonic-types/lib-*"],
